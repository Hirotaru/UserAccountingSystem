@model IEnumerable<UserAccountingSystem.Models.User>
@{
    /**/

    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("UserSearch", new AjaxOptions { UpdateTargetId = "UserList" }))
{
    <div class="form-group">
        <label for="SearchBox">Search by FirstName</label>
        <input id="SearchBox" type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="search" class="btn btn-primary" />
    </div>
}

<div id="UserList">
    @Html.Partial("UserList");
</div>
